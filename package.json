{
	"name": "ztm-browser",
	"productName": "ztbrowser",
	"version": "1.0.0",
	"author": {
	    "name": "lindongchen",
	    "email": "lin@flomesh.cn"
	},
	"scripts": {
		"dev": "vite",
		"build": "vite build && electron-builder",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs --fix --ignore-path .gitignore"
	},
	"build": {
		"appId": "com.ztm.browser",
		"productName": "ZTBrowser",
		"asar": true,
		"copyright": "Copyright Â© 2024 flomesh",
		"directories": {
			"output": "release/"
		},
		"files": [
			"dist"
		],
		"mac": {
			"artifactName": "${productName}_${version}.${ext}",
			"target": "dmg",
			"hardenedRuntime": true,
			"gatekeeperAssess": true,
			"extendInfo": {
				"NSAppleEventsUsageDescription": "Let me use Apple Events.",
				"NSCameraUsageDescription": "Let me use the camera.",
				"NSScreenCaptureDescription": "Let me take screenshots."
			}
		},
		"dmg": {
			"background": "./build/background.png",
			"iconSize": 100,
			"contents": [
				{
					"x": 255,
					"y": 85,
					"type": "file"
				},
				{
					"x": 253,
					"y": 325,
					"type": "link",
					"path": "/Applications"
				}
			],
			"window": {
				"width": 500,
				"height": 500
			}
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			],
			"artifactName": "${productName}_${version}.${ext}"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": false,
			"allowToChangeInstallationDirectory": true,
			"deleteAppDataOnUninstall": false
		},
		"linux": {
			"icon": "./build/icon.png",
			"category": "Application",
			"target": [
				"AppImage",
				"rpm",
				"deb"
			]
		},
		"publish": [
			{
				"provider": "generic",
				"url": "http://127.0.0.1:8080"
			}
		],
		"releaseInfo": {
			"releaseNotes": "update version"
		}
	},
	"dependencies": {
		"@primevue/core": "4.2.5",
		"@primevue/themes": "4.2.5",
		"axios": "^0.28.0",
		"dayjs": "^1.11.10",
		"electron-store": "^10.0.0",
		"js-cookie": "^2.2.1",
		"lodash": "^4.17.21",
		"nprogress": "^0.2.0",
		"primeflex": "^3.3.1",
		"primeicons": "^7.0.0",
		"primevue": "4.2.5",
		"vite-plugin-require": "^1.1.14",
		"vue": "^3.5.13",
		"vue-router": "^4.5.0",
		"vuex": "^4.1.0"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.1.4",
		"@vitejs/plugin-vue": "^5.2.1",
		"@vue/eslint-config-prettier": "^7.0.0",
		"electron": "^33.2.1",
		"electron-builder": "^25.1.8",
		"mockjs": "^1.1.0",
		"sass": "^1.55.0",
		"vite": "^4.2.1",
		"vite-plugin-electron": "0.8.3",
		"vite-plugin-electron-renderer": "^0.14.5",
		"vite-plugin-mock": "^3.0.1",
		"vite-plugin-svg-icons": "^2.0.1"
	},
	"main": "dist/electron/index.js"
}
